<% include partials/header %>

<% if(user){ %>
<div class="card big logout clearfix">
    <p class="card-title">user info</p>
    <h4 class="">Currently logged in as "<%= user.username %>".</h4>
    <a href="/logout" class="btn">Logout</a>
</div>
<% } %>

<% if(!user) { %>
<div class="card big login">
    <p class="card-title">Login</p>
    <h2>Log in:</h2>
    <form action="/login" method="POST" class="clearfix">
        <label>Username:<input type="text" name="username" required autofocus></label>
        <label>Password:<input type="password" name="password" required></label>
        <button class="btn" type="submit">Submit</button>
    </form>
</div>
<div class="card big register">
    <p class="card-title">Register</p>
    <h2>Register:</h2>
    <form action="/register" method="POST" class="clearfix">
        <label>Username:<input type="text" name="username" required autofocus></label>
        <label>Password:<input type="password" name="password" required></label>
        <button class="btn" type="submit">Submit</button>
    </form>
</div>
<% } %>

<% include partials/footer %>